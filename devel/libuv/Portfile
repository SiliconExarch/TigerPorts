# $Id$

PortSystem          1.0

name                libuv
version             1.8.0
categories          devel
platforms           darwin
maintainers         raimue \
                    openmaintainer
license             {MIT BSD} 

description         Cross-platform asychronous I/O

long_description \
    libuv is a multi-platform support library with a focus on asynchronous I/O.

homepage            http://libuv.org/
master_sites        http://dist.libuv.org/dist/v${version}/
distname            ${name}-v${version}

checksums           rmd160  707716dcbd072376ae82a46c4457305cc0472499 \
                    sha256  6511f734da4fe082dacf85967606d600b7bce557bb9b2f0d2539193535323125 \
                    size    1042536

use_autoconf        yes
autoconf.cmd        ./autogen.sh

depends_build       port:automake \
                    port:autoconf \
                    port:libtool \
                    port:pkgconfig

# define this header block to prevent /usr/include/net/inet.h from being included
# causes errors with OpenTransport defines
configure.cppflags-append -D_NETINET_TCP_H_=1

# disable built-in sendfile on 10.4 (whcih doesn't have it)
patchfiles-append   patch-scr-unix-fs-sendfile.diff

# patch out unknown struct stat members on 10.4 in fs.c and in tests
# src/unix/fs.c:713: error: 'struct stat' has no member named 'st_birthtimespec'
patchfiles-append   patch-src-unix-fs-birthtimespec.diff
patchfiles-append   patch-test-test-fs.diff

# tiger doesn't have the fsevents chops for libuv so disable it
patchfiles-append   patch-src-unix-fsevents-tiger.diff

